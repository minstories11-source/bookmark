    <script>
        // Generate activation code from session ID
        function generateActivationCode() {
            // Get Stripe session ID from URL (if available)
            const urlParams = new URLSearchParams(window.location.search);
            const sessionId = urlParams.get('session_id');
            
            if (sessionId) {
                // Use first 16 characters of session ID
                return sessionId.substring(0, 16).toUpperCase();
            } else {
                // Generate random code
                const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ23456789';
                let code = '';
                for (let i = 0; i < 16; i++) {
                    code += chars.charAt(Math.floor(Math.random() * chars.length));
                    if ((i + 1) % 4 === 0 && i < 15) code += '-';
                }
                return code;
            }
        }

        // Display activation code
        const activationCode = generateActivationCode();
        document.getElementById('activationCode').textContent = activationCode;

        // Copy code to clipboard
        function copyCode() {
            const code = document.getElementById('activationCode').textContent;
            navigator.clipboard.writeText(code).then(() => {
                const btn = document.querySelector('.copy-btn');
                btn.textContent = '‚úÖ Copied!';
                btn.style.background = '#27ae60';
                setTimeout(() => {
                    btn.textContent = 'üìã Copy Code';
                    btn.style.background = '';
                }, 2000);
            });
        }

        // Store activation code in localStorage for retrieval
        localStorage.setItem('latestActivationCode', activationCode);
    </script>
